[Unit]
Description=ROVI gateway (backend + UI bridge + display)
After=network.target
Wants=network.target

[Service]
Type=simple
User=wass
SupplementaryGroups=rovi-ops
WorkingDirectory=/home/wass/dev/rovi_ros_ws
EnvironmentFile=/home/wass/dev/rovi_ros_ws/.env.robot
RuntimeDirectory=rovi
ExecStart=/home/wass/dev/rovi_ros_ws/services/run_gateway.sh
KillSignal=SIGINT
TimeoutStopSec=20
Restart=no

[Install]
WantedBy=multi-user.target
