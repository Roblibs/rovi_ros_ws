<?xml version="1.0" encoding="utf-8"?>
<CycloneDDS
  xmlns="https://cdds.io/config"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="https://cdds.io/config https://raw.githubusercontent.com/eclipse-cyclonedds/cyclonedds/master/etc/cyclonedds.xsd"
>
  <Domain Id="any">
    <General>
      <!-- Force unicast: multicast discovery often fails between robot <-> WSL. -->
      <AllowMulticast>false</AllowMulticast>
    </General>

    <Discovery>
      <!-- Static peer list (2 machines). -->
      <Peers>
        <!-- Ensure same-host multi-process discovery works even with multicast disabled. -->
        <Peer Address="127.0.0.1"/>
        <Peer Address="10.0.0.180"/>
        <Peer Address="10.0.0.184"/>
      </Peers>
    </Discovery>
  </Domain>
</CycloneDDS>
