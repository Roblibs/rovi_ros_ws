<?xml version="1.0"?>
<sdf version="1.10" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:arg name="namespace" default=""/>
  <xacro:arg name="robot_name" default="rovi"/>

  <model name="$(arg robot_name)">
    <pose>0 0 0 0 0 0</pose>

    <link name="base_link">
      <!-- Approximate 2kg chassis for a "heavier" feel in simulation -->
      <pose>0 0 0.03 0 0 0</pose>
      <inertial>
        <mass>2.0</mass>
        <inertia>
          <!-- Box-ish inertia approximation, size ~0.30 x 0.24 x 0.06 -->
          <ixx>0.0102</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.0156</iyy>
          <iyz>0.0</iyz>
          <izz>0.0246</izz>
        </inertia>
      </inertial>

      <collision name="chassis_collision">
        <geometry>
          <box>
            <size>0.30 0.24 0.06</size>
          </box>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="chassis_visual">
        <geometry>
          <mesh>
            <uri>package://rovi_description/meshes/mecanum/chassis.stl</uri>
          </mesh>
        </geometry>
        <material>
          <diffuse>0 0.7 0 1</diffuse>
          <ambient>0 0.4 0 1</ambient>
        </material>
      </visual>
    </link>

    <link name="laser_link">
      <pose>0.129 0 0.1645 0 0 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.00001</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.00001</iyy>
          <iyz>0</iyz>
          <izz>0.00001</izz>
        </inertia>
      </inertial>
      <visual name="laser_visual">
        <geometry>
          <mesh>
            <uri>package://rovi_description/meshes/sensor/laser_link.STL</uri>
          </mesh>
        </geometry>
        <material>
          <diffuse>0.8 0.8 0.8 1</diffuse>
        </material>
      </visual>

      <sensor name="rovi_lidar" type="gpu_lidar">
        <always_on>true</always_on>
        <visualize>true</visualize>
        <update_rate>10</update_rate>
        <topic>$(arg namespace)/scan</topic>
        <gz_frame_id>laser_link</gz_frame_id>
        <ray>
          <scan>
            <horizontal>
              <samples>360</samples>
              <resolution>1</resolution>
              <min_angle>0.0</min_angle>
              <max_angle>6.28318530718</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.05</min>
            <max>12.0</max>
            <resolution>0.01</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </ray>
      </sensor>
    </link>

    <joint name="laser_joint" type="fixed">
      <parent>base_link</parent>
      <child>laser_link</child>
    </joint>

    <!-- Holonomic base motion (X/Y + yaw) driven by gz.msgs.Twist on /model/<name>/cmd_vel -->
    <plugin filename="gz-sim-velocity-control-system" name="gz::sim::systems::VelocityControl"/>
  </model>
</sdf>

